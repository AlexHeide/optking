#! SCF DZ allene geometry optimzation, with Cartesian input
import optking

REF_energy = -115.8302823663 

molecule allene {
  H -2.0  0.0  1.0
  H -2.0  0.0 -1.0
  C -1.5  0.0  0.0
  C  0.0  0.0  0.0
  C  1.5  0.0  0.0
  H  2.0  1.0  0.0
  H  2.0 -1.0  0.0
}

set {
  basis DZ
  e_convergence 10
  d_convergence 10
  dertype none
  scf_type pk
}

result = optking.optimize_psi4('scf')
thisenergy = result['energies'][-1]

compare_values(REF_energy, thisenergy, 2, "Reference energy")

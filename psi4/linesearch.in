set {
  basis cc-pvdz
  e_convergence 10
  d_convergence 10
  scf_type pk
  geom_maxiter 20
  g_convergence = gau_tight
}

set optking step_type linesearch

import Psi4Opt
Psi4Opt.calcName = 'hf'
E = Psi4Opt.Psi4Opt()
compare_values(finalEnergy, E, 6, "LINESEARCH Step Final Energy")                                #TEST

